<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sos.rh.consumerapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SOS</name>
    <description>
        Sos Enduser POC
    </description>
    <author email="rhmap@redhat.com" href="http://cordova.io">
      Red Hat Mobile.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="Orientation" value="portrait" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="port-hdpi" src="res/screen/android/sos_300dpi.jpg" />
        <splash density="port-ldpi" src="res/screen/android/sos_300dpi.jpg" />
        <splash density="port-mdpi" src="res/screen/android/sos_300dpi.jpg" />
        <splash density="port-xhdpi" src="res/screen/android/sos_300dpi.jpg" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="~2.4.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.1" />
    <plugin name="aerogear-cordova-push" spec="~3.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
</widget>
